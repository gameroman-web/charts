{
  "name": "charts",
  "private": true,
  "description": "Simple web tool for creating bar charts from CSV files",
  "type": "module",
  "scripts": {
    "lint": "biome lint",
    "format": "biome check --write --linter-enabled=false",
    "dev": "astro dev",
    "build": "astro build",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "quality": "bun run format && bun run lint && bun run test && bun run typecheck",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "astro": "^5.16.9",
    "solid-js": "^1.9.10",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/solid-js": "^5.1.3",
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.59.2"
  }
}
